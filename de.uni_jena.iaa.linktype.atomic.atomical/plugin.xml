<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:de.uni_jena.iaa.linktype.atomic.menus.viewMenu">
         <command
               commandId="org.eclipse.ui.views.showView"
               label="AtomicAL Console"
               mnemonic="A"
               style="push">
                <parameter
				name="org.eclipse.ui.views.showView.viewId"
				value="org.eclipse.ui.console.ConsoleView">
</parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uni_jena.iaa.linktype.atomic.core.perspective">
         <view
               id="org.eclipse.ui.console.ConsoleView"
               ratio="0.8f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="de.uni_jena.iaa.linktype.atomic.atomical.console.AtomicalConsoleFactory"
            label="AtomicAL Console Factory">
      </consoleFactory>
   </extension>

</plugin>
