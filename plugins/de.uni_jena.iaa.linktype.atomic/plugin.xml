<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="de.uni_jena.iaa.linktype.atomic.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.uni_jena.iaa.linktype.atomic.Atomic">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.uni_jena.iaa.linktype.atomic.application"
            description="An extensible OS-independent multi-level annotation platform for linguistic corpora"
            name="Atomic">
         <property
               name="appName"
               value="Atomic">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="de.uni_jena.iaa.linktype.atomic.menus.file"
               label="File"
               mnemonic="F"
               tooltip="The File menu provides access to basic application funtionalities">
            <command
                  commandId="de.uni_jena.iaa.linktype.atomic.commands.exit"
                  label="Exit"
                  mnemonic="x"
                  style="push"
                  tooltip="Closes the workbench and quits Atomic">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.uni_jena.iaa.linktype.atomic.handlers.ExitHandler"
            description="Exits Atomic"
            id="de.uni_jena.iaa.linktype.atomic.commands.exit"
            name="Exit Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.uni_jena.iaa.linktype.atomic.commands.exit"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+Q">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="de.uni_jena.iaa.linktype.atomic.views.navigation"
            name="Navigation"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="de.uni_jena.iaa.linktype.atomic.views.navigation">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="de.uni_jena.iaa.linktype.atomic.views.navigation">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.uni_jena.iaa.linktype.atomic.perspectives.NavigationPerspective"
            id="de.uni_jena.iaa.linktype.atomic.perspectives.navigation"
            name="Navigation Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uni_jena.iaa.linktype.atomic.perspectives.navigation">
         <view
               closeable="true"
               id="de.uni_jena.iaa.linktype.atomic.views.navigation"
               minimized="false"
               moveable="true"
               ratio="0.2f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
