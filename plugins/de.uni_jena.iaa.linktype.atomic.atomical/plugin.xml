<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:de.uni_jena.iaa.linktype.atomic.menus.viewMenu">
         <command
               commandId="de.uni_jena.iaa.linktype.atomic.atomical.openAtomicalConsoleCommand"
               label="AtomicAL Console"
               style="push"
               mnemonic="A">
            <visibleWhen>
               <with
                     variable="activeEditorId">
                  <equals
                        value="de.uni_jena.iaa.linktype.atomic.editors.grapheditor.editor">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uni_jena.iaa.linktype.atomic.editors.grapheditor.perspective">
         <view
               ratio="0.8f"
               moveable="true"
               relative="org.eclipse.ui.editorss"
               closeable="true"
               visible="true"
               id="org.eclipse.ui.console.ConsoleView"
               relationship="bottom">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            label="New AtomicAL Console"
            class="de.uni_jena.iaa.linktype.atomic.atomical.console.AtomicalConsoleFactory">
      </consoleFactory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Open ConsoleView"
            id="de.uni_jena.iaa.linktype.atomic.atomical.openAtomicalConsoleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="de.uni_jena.iaa.linktype.atomic.atomical.openAtomicalConsoleCommand"
            class="de.uni_jena.iaa.linktype.atomic.atomical.console.OpenAtomicalConsoleHandler">
      </handler>
   </extension>
   <extension
         id="de.uni_jena.iaa.linktype.atomic.atomical.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            uri="fragment.e4xmi">
      </fragment>
   </extension>

</plugin>
