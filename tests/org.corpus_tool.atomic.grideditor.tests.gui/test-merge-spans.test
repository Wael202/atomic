Content-Type: text/ecl
Entry-Name: .content

get-view Navigation | get-tree | select "simple-corpus/test-corpus/test-corpus.salt" | get-menu 
    -path "Open With/Grid Editor" | click
// Wait for grid to compile
wait 5000
with [get-editor "test-corpus.salt" | get-canvas] {
	mouse-press 150 30 button3
	mouse-release 150 30 button3
	get-menu "New annotation column" | click
}
with [get-window -class AnnotationColInputDialog] {
    with [get-editbox -after [get-label "Namespace:"]] {
        set-text ns
        key-type "TRAVERSE_TAB_NEXT"
    }
    get-editbox -after [get-label "Name:"] | set-text n
    get-button OK | click
}
// Create actual span and annotation
with [get-editor "test-corpus.salt" | get-canvas] {
	// Select two cells
	mouse-press 220 90 button1
    key-type "M2+ARROW_DOWN"
    // Right-click pop-up menu
    mouse-press 220 90 button3
	mouse-release 220 90 button3
	get-menu -path "Create new span" | click
	// Create annotation on cell
	mouse-press 220 90 button1
    type-text a
    with [get-editbox] {
        set-text asd
    }
    // Select span cell and one below
    mouse-press 220 90 button1
    key-type "M2+ARROW_DOWN"
        // Right-click pop-up menu
    mouse-press 220 90 button3
	mouse-release 220 90 button3
	verify-error {get-menu -path "Create new span"}
	get-menu -path "Merge to single span" | click
}
with [get-editor "test-corpus.salt" | get-canvas] {
    key-type "M1+s"
    key-type "M1+w"
}
with [get-view Navigation | get-tree] {
    select "simple-corpus/test-corpus/test-corpus.salt" | get-menu -path "Open With/Text Editor" | click
    select "simple-corpus/test-corpus/test-corpus.salt" | key-type F5
}
get-editor "test-corpus.salt" | get-text-viewer | set-caret-pos 14 49
get-editor "test-corpus.salt" | get-text-viewer | get-property "getText()" 
    | contains "\\9<nodes xsi:type=\"sDocumentStructure:SSpan\">\n"
    + "\\9\\9<labels xsi:type=\"saltCore:SAnnotation\" namespace=\"ns\" name=\"n\" value=\"T::asd\"/>\n"
    + "\\9\\9<labels xsi:type=\"saltCore:SElementId\" namespace=\"salt\" name=\"id\" value=\"T::salt:/test-corpus/test-corpus#sSpan1\"/>\n"
    + "\\9\\9<labels xsi:type=\"saltCore:SFeature\" namespace=\"salt\" name=\"SNAME\" value=\"T::sSpan1\"/>\n"
get-editor "test-corpus.salt" | get-text-viewer | get-property "getText()" 
    | contains "\\9<edges xsi:type=\"sDocumentStructure:SSpanningRelation\" source=\"//@nodes.12\" target=\"//@nodes.4\">\n"
    + "\\9\\9<labels xsi:type=\"saltCore:SElementId\" namespace=\"salt\" name=\"id\" value=\"T::salt:/test-corpus/test-corpus#sSpanRel1\"/>\n"
    + "\\9\\9<labels xsi:type=\"saltCore:SFeature\" namespace=\"salt\" name=\"SNAME\" value=\"T::sSpanRel1\"/>\n"
    + "\\9</edges>\n"
    + "\\9<edges xsi:type=\"sDocumentStructure:SSpanningRelation\" source=\"//@nodes.12\" target=\"//@nodes.5\">\n"
	+ "\\9<labels xsi:type=\"saltCore:SElementId\" namespace=\"salt\" name=\"id\" value=\"T::salt:/test-corpus/test-corpus#sSpanRel2\"/>\n"
	+ "\\9<labels xsi:type=\"saltCore:SFeature\" namespace=\"salt\" name=\"SNAME\" value=\"T::sSpanRel2\"/>\n"
	+ "\\9</edges>\n"
	+ "\\9<edges xsi:type=\"sDocumentStructure:SSpanningRelation\" source=\"//@nodes.12\" target=\"//@nodes.6\">\n"
