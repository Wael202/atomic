<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.uni_jena.iaa.linktype.atomic.views.layerview.LayerView"
            id="de.uni_jena.iaa.linktype.atomic.views.layerview"
            name="Level View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:de.uni_jena.iaa.linktype.atomic.menus.viewMenu">
         <command
               commandId="org.eclipse.ui.views.showView"
               label="Level View"
               mnemonic="L"
               style="push"
               tooltip="Opens the Level View">
               <parameter name="org.eclipse.ui.views.showView.viewId"
					value="de.uni_jena.iaa.linktype.atomic.views.layerview"/>
					<visibleWhen>
            <with variable="activeEditorId">
                     <equals
                           value="de.uni_jena.iaa.linktype.atomic.editors.grapheditor.editor">
                     </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uni_jena.iaa.linktype.atomic.editors.grapheditor.perspective">
         <view
               closeable="true"
               id="de.uni_jena.iaa.linktype.atomic.views.layerview"
               minimized="false"
               ratio="0.8f"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
